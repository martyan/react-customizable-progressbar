{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true
  },
  "include": ["src", "examples"],
  "exclude": ["node_modules", "dist"]
}
